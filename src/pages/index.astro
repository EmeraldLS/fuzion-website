          href="#"
        >
          <svg
            class="h-12 w-12 text-default-600 transition-all duration-300 group-hover:-translate-y-4 group-hover:text-main"
            stroke="currentColor"
            fill="none"
            stroke-width="2"
            viewBox="0 0 24 24"
            stroke-linecap="round"
            stroke-linejoin="round"
            height="200px"
