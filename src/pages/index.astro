---
import MainLayout from "@/layouts/MainLayout.astro";
import Product from "@/components/Product.astro";
import type { ProductItemResponse } from "@/model/model";
import FeatureProduct from "@/components/FeatureProduct.astro";
import { Button } from "@/components/ui/button";
import WhatWeDo from "@/components/what-we-do";
import { formatCurrency } from "@/utils/utils";

let newProducts: ProductItemResponse[] = [];
let error = null;

const { id } = Astro.params;

try {
  const response = await fetch(
    `${Astro.url.origin}/api/public/new-product?is_new=true&limit=8`
  );
  if (!response.ok) {
    throw new Error("Failed to fetch products");
  }
  const data = await response.json();
  newProducts = data.products;
} catch (e) {
  console.error("Error fetching products:", e);
  error = "An error occurred while fetching products";
}

let featuredProducts: ProductItemResponse[] = [];

try {
  const response = await fetch(
    `${Astro.url.origin}/api/public/new-product?&limit=8`
  );
  if (!response.ok) {
    throw new Error("Failed to fetch products");
  }
  const data = await response.json();
  featuredProducts = data.products;
} catch (e) {
  console.error("Error fetching products:", e);
  error = "An error occurred while fetching products";
}
---

<MainLayout>
  <div class="my-5 overflow-hidden">
    <div class="container mx-auto px-4 sm:px-8 xl:px-4">
      <div
        class="swiper swiper-hero group relative flex items-center rounded-lg"
      >
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="block">
              <div class="absolute inset-0 bg-black opacity-50"></div>
              <img
                src="img/hero/hero-img-1.webp"
                class="h-[70svh] w-full object-cover object-left-top"
                alt=""
              />
              <div class="relative">
                <div class="absolute inset-0 bg-black opacity-50"></div>
                <div
                  class="absolute inset-0 flex -top-[250px] items-start justify-center"
                >
                  <div class="text-center space-y-4">
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">
                      Welcome to our store
                    </h1>
                    <p class="text-white">The best electronics for you</p>
                    <Button className="mt-5 bg-main"> Shop Now </Button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="block">
              <div class="absolute inset-0 bg-black opacity-50"></div>
              <img
                src="img/hero/hero-img-2.jpg"
                alt=""
                class="h-[70svh] w-full object-cover object-top"
              />
